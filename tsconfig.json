{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@mishguru/commandquery": ["src/types/@mishguru-commandquery.d.ts"],
      "@mishguru/data": ["src/types/@mishguru-data.d.ts"],
      "@mishguru/fanout-helpers": ["src/types/@mishguru-fanout-helpers.d.ts"],
      "@mishguru/make": ["src/types/@mishguru-make.d.ts"],
      "@mishguru/raven-helper": ["src/types/@mishguru-raven-helper.d.ts"],
      "@mishguru/test-helpers": ["src/types/@mishguru-test-helpers.d.ts"],
      "random": ["src/types/random.d.ts"]
    }
  },
  "include": [
    "src/**/*"
    ]
}
